---
// Footer override â€” pagination + custom footer
import EditLink from "@astrojs/starlight/components/EditLink.astro";
import LastUpdated from "@astrojs/starlight/components/LastUpdated.astro";
import Pagination from "@astrojs/starlight/components/Pagination.astro";
---

<footer class="page-footer">
  <div class="meta sl-flex">
    <EditLink {...Astro.props} />
    <LastUpdated {...Astro.props} />
  </div>
  <Pagination {...Astro.props} />
  <div class="site-footer">
    <div class="footer-content">
      <div class="footer-brand">
        <svg aria-hidden="true" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M2 3.993A1 1 0 0 1 2.992 3h18.016c.548 0 .992.445.992.993v16.014a1 1 0 0 1-.992.993H2.992A.993.993 0 0 1 2 20.007V3.993zM4 5v14h16V5H4zm2 2h6v6H6V7zm2 2v2h2V9H8zm-2 6h12v2H6v-2zm8-8h4v2h-4V7zm0 4h4v2h-4v-2z"/>
        </svg>
        <span>@f0rbit/runbook</span>
      </div>
      <span class="footer-license">MIT License</span>
      <nav class="footer-links">
        <a href="https://github.com/f0rbit/runbook">GitHub</a>
        <a href={import.meta.env.BASE_URL}>Docs</a>
        <a href={`${import.meta.env.BASE_URL}getting-started/installation/`}>Getting Started</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .page-footer {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg, 1.5rem);
  }
  .meta {
    gap: var(--space-md, 1rem);
  }
  .site-footer {
    border-top: 1px solid var(--border, var(--sl-color-hairline));
    padding-top: var(--space-lg, 1.5rem);
    margin-top: var(--space-md, 1rem);
  }
  .footer-content {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-md, 1rem);
    font-size: var(--text-sm, 0.875rem);
    color: var(--fg-muted, var(--sl-color-gray-2));
  }
  .footer-brand {
    display: flex;
    align-items: center;
    gap: var(--space-xs, 0.25rem);
    color: var(--fg-faint, var(--sl-color-gray-3));
  }
  .footer-license {
    color: var(--fg-faint, var(--sl-color-gray-3));
  }
  .footer-links {
    display: flex;
    gap: var(--space-md, 1rem);
    margin-left: auto;
  }
  .footer-links a {
    color: var(--fg-muted, var(--sl-color-gray-2));
    text-decoration: none;
    transition: color var(--transition, 0.15s);
  }
  .footer-links a:hover {
    color: var(--fg, var(--sl-color-white));
  }
</style>
