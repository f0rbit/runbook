---
import Section from "./Section.astro";

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

const links = [
  {
    title: "Installation",
    description: "Set up your first runbook project",
    href: `${base}getting-started/installation`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>`,
  },
  {
    title: "Concepts",
    description: "Learn about steps, workflows, and providers",
    href: `${base}concepts/steps`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>`,
  },
  {
    title: "Agent Steps",
    description: "Configure AI agents in your workflows",
    href: `${base}guides/agent-steps`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 8V4H8"/><rect width="16" height="12" x="4" y="8" rx="2"/><path d="M2 14h2"/><path d="M20 14h2"/><path d="M15 13v2"/><path d="M9 13v2"/></svg>`,
  },
  {
    title: "API Reference",
    description: "Full package documentation",
    href: `${base}packages/core`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/><path d="M12 18v-6"/><path d="m9 15 3 3 3-3"/></svg>`,
  },
];
---

<Section title="Next Steps" bordered>
  <div class="links-grid">
    {links.map((link) => (
      <a href={link.href} class="card card-flat card-interactive link-card">
        <div class="link-header">
          <div class="card-icon" set:html={link.icon} />
          <h3 class="card-title">{link.title}</h3>
        </div>
        <p class="card-description">{link.description}</p>
      </a>
    ))}
  </div>
</Section>

<style>
  .links-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }

  .link-card {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .link-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .link-header .card-icon {
    margin: 0;
  }

  .link-header .card-title {
    margin: 0;
  }

  @media (max-width: 600px) {
    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
